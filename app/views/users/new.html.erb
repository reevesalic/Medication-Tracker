
<h1>Sign Up!</h1>

<%= form_for(:user) do |f| %> 
<% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>
<br>
<br>
<%= f.submit "Sign up" %>

<p>
     <%= link_to "Login", login_path %>
<br>
<br>
<%# # this is the route it will take you to: auth/google/oauth2 %>
     <%= link_to "Log In with Google", '/auth/google_oauth2' %>
</p>
<% end %>