<%= render 'web_links' %>

<h1>All Patients</h1>
<%= form_tag("/patients", method: 'get') do %>
<%= label_tag(:q, "Search for:") %>
<%= text_field_tag(:q) %>
<%= submit_tag("Search") %>


<h2> Patients Ordered by least medications </h2>
  <ul>
    <% @patients.most_illnesses.each do |patient| %> 
    <li> <%= link_to patient.name, patient_path(patient) %>  -- Number of Meds <%= patient.illnesses.count %></li>
    <li> Number of Medications <%= patient.medications.count %>
    <% end %>
  </ul>
<% end %> 