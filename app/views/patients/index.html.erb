<%= render 'web_links' %>

<h1>All Patients</h1>
<%= form_tag("/patients", method: 'get') do %>
 <ul>
    <% @patients.each do |patient| %> 
    <li> <%= link_to patient.name, patient_path(patient) %> </li>
    <% end %>
  </ul>
    <%= link_to "View Medication counts", patients_patient_meds_path(@patient) %>
