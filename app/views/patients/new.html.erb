<%= render 'web_links' %><br>
   
<h2>Add a New Patient</h2>
<br>

 <%= form_with(model: @patient, local: true) do |f| %> 
 <% if @patient.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @patient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :name, "Patient Name" %>
    <%= f.text_field :name %>
    <br><br><br>
   
  <div> 
    <%= f.fields_for :illnesses do |i|%>
    
      <%= i.label :illness, "Illness Description"%>
      <%= i.text_field :illness %> 

      <h4>Add a new medication</h4>
        
        <%= i.fields_for :medication do |m| %>
          <%= m.label :name, 'Medication Name' %>
          <%= m.text_field :name %><br><br>
        
          <%= m.label :frequency, "Frequency"%>
          <%= m.number_field :frequency %>
          <%= m.label :quantity, "Quantity"%>
          <%= m.number_field :quantity %><br><br>
          <% end %>
       
    <% end %>
    <br>
    <br>
  <%= f.submit "submit" %>
<% end %>
